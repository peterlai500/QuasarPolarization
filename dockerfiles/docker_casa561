# This dockerfile is use to bulid container based on CentOS 7-2009
# Attempt to satisfy the CASA-5.6.1 necessary libraries

# using the CentOS 7-2009, which corresponding to RHEL 7.9
FROM centos:7.9.2009

# Updates and install libraries
RUN yum -y update \
    yum -y upgrade \
    yum -y install curl \
    yum -y install wget \ 
    yum -y install perl \
    yum -y install freetype \ 		
    yum -y install libX11 \ 		
    yum -y install libXft \		
    yum -y install xorg-x11-server-Xorg \	
    yum -y install xorg-x11-xauth \
    yum -y install xorg-x11-apps \
    yum -y install xorg-x11-server-Xvfb \
    yum -y install libXrandr \
    yum -y install libXinerama \
    yum -y install libnsl \
    yum -y groupinstall 'development tool'
RUN curl -O https://casa.nrao.edu/download/distro/casa-pipeline/release/el7/casa-pipeline-release-5.6.1-8.el7.tar.gz
RUN tar zxvf casa-pipeline-release-5.6.1-8.el7.tar.gz
